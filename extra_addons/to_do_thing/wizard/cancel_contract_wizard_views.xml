<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="to_do_wizard" model="ir.ui.view">
        <field name="name">to_do_wizard</field>
        <field name="model">my.todo.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2>Choose state</h2>
                    <group>
                        <field name="to_do_id" readonly="1"/>
                        <field name="state"/>
                    </group>
                    <footer>
                        <button name="action_aplay_state"
                                type="object"
                                string="Set state"
                                class="oe_highlight"/>
                        <button string="Cancel"
                                default_focus="1"
                                class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="to_do_wizard_action" model="ir.actions.act_window">
        <field name="name">Set STATE</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">my.todo.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_to_do_id' : active_id}</field>
        <field name="target">new</field>
    </record>

</odoo>